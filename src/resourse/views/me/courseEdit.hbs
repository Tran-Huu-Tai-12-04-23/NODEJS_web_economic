<div class="container mt-4">
    <h3>Upadate course</h3>

    <form  method="POST" action="/course/{{course._id}}/update?_method=PUT">
        <div class="form-group">        
            <label for="name">Name Course</label>
            <input type="text" value="{{course.name}}" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="desciptions">Desciptions</label>
            <textarea class="form-control"  name="description"  id="desciptions">
{{course.desciptions}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoID">Video ID</label>
            <input type="text" value="{{course.videoID}}" class="form-control" id="videoID" name="videoID">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" value="{{course.level}}" class="form-control" id="level" name="level">
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>