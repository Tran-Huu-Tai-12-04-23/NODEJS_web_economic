<div class="container mt-4">
    <h3>Đăng khóa học</h3>

    <form  method="POST" action="/course/store">
        <div class="form-group">
            <label for="name">Name Course</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="desciptions">Desciptions</label>
            <textarea class="form-control" id="desciptions" name="desciptions"></textarea>
        </div>
        <div class="form-group">
            <label for="videoID">Video ID</label>
            <input type="text" class="form-control" id="videoID" name="videoID">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        
        <button type="submit" class="btn btn-primary">ADD course</button>
    </form>
</div>